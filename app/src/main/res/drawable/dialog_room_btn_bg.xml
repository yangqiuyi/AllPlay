    <item >
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/titlebar_background"/>
        </shape>
    </item>


    <item android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners
