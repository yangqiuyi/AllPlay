<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/titlebar_background"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="20sp"
                android:textColor="@color/tv_agree"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name">
                <ImageView
                    android:id="@+id/user_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_location" />
                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_toRightOf="@+id/user_location"/>
                <TextView
                    android:id="@+id/guankan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="观看人数"
                    android:layout_toLeftOf="@+id/user_see"
                    />
                <ImageView
                    android:id="@+id/user_see"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="13dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/home_iswatch"
                    android:paddingTop="5dp"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_picture"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
    </RelativeLayout>

</LinearLayout>